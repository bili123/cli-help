tput setaf 1 && echo Hardware: && tput sgr0 && lscpu|egrep "Architecture|CPU op|Model name|CPU MHz" && tput setaf 1 && echo Systeminfo: && tput sgr0 && lsb_release -idrc && tput setaf 1 &&  echo Kernel:&& tput sgr0 && uname -r && tput setaf 1 && echo Devices: && tput sgr0 && lsblk -o NAME,SIZE,MOUNTPOINT | grep -v ^loop && tput setaf 1 && echo Speicherplatz: && tput sgr0 && df -h --output=source,size,used,avail,target --exclude-type=tmpfs | grep -v ^\/dev\/loop
